@model MyOrgs.Models.OrgMembership
@{
    ViewData["Title"] = "Create";
}



<h1>Join</h1>

<h4>Organization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Join">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="isManager" class="control-label">Are you a manager?</label>
                <input asp-for="isManager" class="form-check" />
                <!--Still need to have someway to manage this in the future so that current management has to validate -->
                <span asp-validation-for="isManager" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User"></label>
                <input asp-for="User" class="text" value="@User.Identity.Name" disabled readonly />
            </div>
            <div class="form-group">
                <label asp-for="Org"></label>
                <input asp-for="Org" class="text" value="@ViewBag.OrgID" disabled readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Join" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
